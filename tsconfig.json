{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      "data/*": ["./data/*"],
      "config/*": ["./config/*"],
      "context/*": ["./context/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
