{
  "name": "@rocali/t1-app",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "npx expo start",
    "android": "npx expo start --android",
    "ios": "npx expo start --ios",
    "web": "npx expo start --web",
    "ts:check": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --watch --coverage=false --changedSince=origin/main",
    "test:debug": "jest -o --watch --coverage=false",
    "test:final": "jest",
    "ci:check": "yarn lint:fix && yarn ts:check && yarn test:final",
    "sb:load": "sb-rn-get-stories",
    "sb:watcher": "sb-rn-watcher",
    "base-comp:new": "hygen base-comp new $1",
    "base-screen:new": "hygen base-screen new $1"
  },
  "dependencies": {
    "@babel/plugin-transform-class-properties": "^7.22.5",
    "@expo-google-fonts/inter": "^0.2.3",
    "@expo/webpack-config": "^19.0.0",
    "@react-native-async-storage/async-storage": "1.18.2",
    "@storybook/core-common": "6.5.16",
    "axios": "^1.5.1",
    "expo": "~49.0.13",
    "expo-constants": "~14.4.2",
    "expo-linking": "~5.0.2",
    "expo-localization": "~14.3.0",
    "expo-router": "^2.0.0",
    "expo-secure-store": "~12.3.1",
    "expo-status-bar": "~1.6.0",
    "expo-updates": "~0.18.17",
    "firebase": "^10.5.2",
    "i18n-js": "4.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.6",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-web": "~0.19.6",
    "react-query": "^3.39.3",
    "styled-components": "5.3.6",
    "text-encoding": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-transform-private-methods": "^7.22.5",
    "@storybook/addon-ondevice-actions": "^6.5.7",
    "@storybook/addon-ondevice-controls": "^6.5.7",
    "@storybook/react-native": "^6.5.7",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.3.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/jest": "^29.5.6",
    "@types/react": "~18.2.14",
    "@types/styled-components-react-native": "^5.2.5",
    "@types/url-parse": "^1.4.11",
    "babel-plugin-module-resolver": "^5.0.0",
    "buffer": "^6.0.3",
    "eslint": "^8.51.0",
    "eslint-config-universe": "^12.0.0",
    "husky": "^8.0.3",
    "jest": "29.4.3",
    "jest-expo": "^49.0.0",
    "lint-staged": "^15.1.0",
    "msw": "^2.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.1.3"
  },
  "private": false,
  "eslintConfig": {
    "extends": "universe"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|i18n-js|expo-localization|jest-runner|jest-expo|)"
    ],
    "setupFiles": [
      "./setupJest.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/app/**/*.{ts,tsx}",
      "!src/app/**/_layout.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ]
  }
}
